{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "esnext",
    "lib": [
      "es2020"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@apps/users-authentication/*": [
        "apps/users/src/app/authentication/*"
      ],
      "@apps/users-blog-user/*": [
        "apps/users/src/app/blog-user/*"
      ],
      "@libs/config-users": [
        "libs/config/users/src/index.ts"
      ],
      "@libs/models-blog": [
        "libs/models/blog/src/index.ts"
      ],
      "@libs/shared-app-config": [
        "libs/shared/app-config/src/index.ts"
      ],
      "@libs/shared-app-types": [
        "libs/shared/app-types/src/index.ts"
      ],
      "@libs/utils-core": [
        "libs/utils/core/src/index.ts"
      ],
      "@libs/utils-types": [
        "libs/utils/types/src/index.ts"
      ],
      "@project/config/blog": [
        "libs/config/blog/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
